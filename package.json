{
  "name": "assistant-cli",
  "version": "1.2.5",
  "description": "A command line tool to easily integrate OpenAI Chat GPT service",
  "main": "./bin/cli",
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "assistant": "./bin/cli"
  },
  "scripts": {
    "publish": "tsc && npm publish",
    "start": "node .",
    "build": "tsc",
    "get-token": "tsc && ENV=dev electron ./dist/fetch-token.js"
  },
  "author": "Paolo Di Ciaula",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^9.0.0",
    "axios": "^1.2.1",
    "cli-md": "^1.2.0",
    "cli-spinner": "^0.2.10",
    "electron": "^22.0.0",
    "expiry-map": "^2.0.0",
    "readline": "^1.3.0",
    "uuid": "^9.0.0"
  },
  "keywords": [
    "openai",
    "chatgpt",
    "CLI",
    "terminal",
    "gpt",
    "gpt3",
    "gpt4",
    "chatbot",
    "chat",
    "machine learning",
    "conversation",
    "conversational ai",
    "ai",
    "ml",
    "bot"
  ],
  "devDependencies": {
    "@types/node": "^18.11.14",
    "typescript": "^4.9.4"
  }
}
